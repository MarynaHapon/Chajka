html
	line-height 1
	font-size 16px


body
	font-family 'Roboto', sans-serif


h1,h2,h3,h4,h5,h6
	margin 0


h1
	font-size 55px


ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0
	//font-family 'EB Garamond', serif

a
	text-decoration none
	color black
	transition 0.3s

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none


section
	position relative


input,
select,
button
	outline none


*, *:before, *:after
	box-sizing border-box