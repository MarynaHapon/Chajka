.news-tab
    font-family 'Roboto', sans-serif
    overflow hidden


.news-tabs
    display flex
    justify-content space-between
    overflow hidden
    text-align left

    li
        overflow hidden

        &:hover
            img
                transform scale(1.05)

            .news-tab-date-group
                background-color $persian-green

    a
        width 300px
        border-bottom 0
        color $baltic-sea
        font-size 14px
        font-weight 600
        display block
        outline none
        transition all 0.2s ease-in-out
        border-top 2px solid transparent


.news-tabs-item
    display none
    padding 30px 0


.news-current-tub
    display block


.news-current a
    //color $jungle-green
    //border-top 2px solid $jungle-green


.news-tab-img-wrap
    position relative


.news-tab-img
    size(300px,180px)
    overflow hidden
    transition 2s


.news-tab-date-group
    position(absolute, , 0px, 10px, )
    display flex
    flex-direction column
    justify-content center
    align-items center
    size(50px,60px)
    background-color $jungle-green


.news-tab-date
.news-tab-month
    color $white
    font-family 'Roboto', sans-serif


.news-tab-date
    font-size 24px
    font-weight 800


.news-tab-month
    font-size 10px


.news-teb-title
    line-height 32px
    font-size 11px
    font-weight 800
    color $gray3


.news-teb-subtitle
    line-height 16px
    font-size 11px
    color $gray4
    font-family 'Roboto', sans-serif


.news-item-tab-current
    display flex
    flex-direction row
    justify-content space-between


.news-tab-img-current-wrap
    position relative
    size(630px, 400px)


.news-tab-img-current
    size(630px, 400px)


.news-tab-text-wrap-current
    display flex
    flex-direction column
    justify-content space-between
    width 300px
    font-family 'Roboto', sans-serif
    text-align left


.news-tab-text-current
.news-tab-data-current
.news-tab-enter-current
.news-tab-time-current
.news-tab-date-current-group
    font-family 'Roboto', sans-serif


.news-tab-data-current
    padding 5px 0
    font-size 16px
    font-weight 400
    color $gray
    text-transform uppercase


.news-tab-title-current
    padding 5px 0
    font-size 24px
    color $matterhorn


.news-tab-text-current
    padding 5px 0
    line-height 28px
    font-size 18px
    color $matterhorn


.news-tab-enter-current
.news-tab-time-current
    line-height 22px
    color $gray


.news-tab-date-current-group
    position(absolute, ,0px, 20px, )
    padding 0 20px
    background-color $jungle-green
    line-height 60px
    font-size 30px
    font-weight 700
    color $white