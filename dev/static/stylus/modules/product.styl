  // tabs
.tab
    overflow hidden
    font-family 'Roboto', sans-serif
    color #888


.tabs
    display flex
    justify-content space-between
    overflow hidden

    li
        line-height 38px
        overflow hidden
        position relative

    a
        border-bottom 0
        color $baltic-sea
        font-size 14px
        font-weight 600
        display block
        outline none
        transition all 0.2s ease-in-out
        border-top 2px solid transparent


.tabs-item
    display none
    padding 30px 0


.current-tub
    display block

.current a
    color $jungle-green
    border-top 2px solid $jungle-green


  // product list
.product-list
    display flex
    flex-direction row
    justify-content space-between


.product-item-group
    display flex
    flex-direction column


.product-item
    margin 20px auto
    width 300px
    transition 0.2s

    &:hover
        transform scale(0.98)


.product-image
    size(300px)
    background-color $mischka


.product-name
.product-price
    font-family 'Roboto', sans-serif
    text-align left


.product-name
    padding 5px 0 0
    font-size 13px
    font-weight 400
    line-height 20px
    color $grey-2


.product-price
    font-size 12px
    font-weight 800
    color $swamp