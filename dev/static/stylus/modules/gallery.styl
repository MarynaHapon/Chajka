.gallery-list
    display flex
    justify-content space-around
    align-items center
    overflow hidden


.gallery-item-group
    display flex
    flex-direction column


.gallery-item
.gallery-item--large
    overflow hidden
    display flex
    justify-content flex-end

    &:hover
        justify-content flex-start

    img
        cursor pointer
        transition 2s

    img:hover
        transform scale(1.2)


.gallery-item
    size(240px)


.gallery-item--large
    size(240px, 480px)


.animation
    animation animationFirst 5s infinite


.animation-reverce
    animation animationSecond 5s infinite


@keyframes animationFirst
    0%
        transform scale(1)

    25%
        transform scale(1.3)

    50%
        transform scale(1.2)

    75%
        transform scale(1.4)

    100%
        transform scale(1)



@keyframes animationSecond
    0%
        transform scale(1)

    25%
        transform scale(1.4)

    50%
        transform scale(1.2)

    75%
        transform scale(1.3)

    100%
        transform scale(1)