.inner-footer
    padding 60px 0


.footer-social
    display flex
    flex-direction row
    justify-content center


.fooder-link
    margin 0 20px
    padding 10px
    background-color $night-rider
    border-radius 100%

    &:hover
        background-color $persian-green

    &:active
        background-color $jungle-green


.sprite
    display block
    background-image url('../../static/img/general/spritesheet.png')
    background-repeat no-repeat


.sprite-facebook
    width 32px
    height 32px
    background-position -5px -5px


.sprite-tumblr
    width 32px
    height 32px
    background-position -47px -5px


.sprite-twitter
    width 32px
    height 32px
    background-position -89px -5px


.sprite-vk
    width 32px
    height 32px
    background-position -131px -5px


.footer-nav
    margin 60px 0 100px
    display flex
    flex-direction row
    justify-content space-around

    li
        a
            color $white

            &:hover
                color $persian-green

            &:active
                color $jungle-green


.footer-copyright
    font-size 16px
    color $matterhorn
    text-align center