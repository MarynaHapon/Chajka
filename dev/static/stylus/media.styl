@media screen and (max-width: 375px)
    .slogan-title
        font-size 25px
        line-height 30px


@media screen and (max-width: 425px)
    .title
        font-size 40px

    .about-item-group
        flex-direction column


@media screen and  (max-width: 768px)
    .slogan-title
        font-size 35px
        line-height 40px

    .logo
        margin  12px 0 0 10px
        size(110,auto)
        background-color transparent
        color transparent
        line-height 0
        box-shadow none

    .navbar
        display none

    .navbar-burger
        //display none

        ul
            overflow hidden
            height 100vh
            flex-direction column
            align-items center
            justify-content center
            background-color $white

            a
                color $jungle-green

    .about-item-list
        flex-direction column


@media screen and  (min-width: 769px)
    .burger
        display none

    .navbar-burger
        display none!important // solves the problematic of menu transitions


@media screen and (max-width: 650px)
    .product-item-group
        flex-direction column

    .gallery-item
        flex-direction column


@media screen and  (min-width: 650px) and (max-width: 960px)
    .product-item-group
        flex-direction row
        justify-content space-around

    .gallery-item-group
        flex-direction row

    .gallery-item--large
        size(480px,240px)


@media screen and (max-width: 960px)
    .tabs
        flex-direction column

    .product-list
        flex-direction column

    .gallery-list
        flex-direction column

    .gallery-item
        size(auto,240px)

    .gallery-item--large
        size(auto,240px)


@media screen and (max-width: 1024px)
    .navbar
        ul
            a
                padding 0 10px